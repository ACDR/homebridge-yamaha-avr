{
  "pluginAlias": "yamaha-avr",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "ip": {
        "title": "IP Address",
        "type": "string",
        "required": true,
        "default": ""
      },
      "name": {
        "title": "Name",
        "type": "string",
        "required": false,
        "default": "Yamaha AVR"
      },
      "cacheDirectory": {
        "title": "Cache Directory",
        "description": "Default: ~/.homebridge/.yamahaAVR",
        "type": "string",
        "required": false
      },
      "enablePureDirectSwitch": {
        "title": "Enable Pure Direct Switch Device",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "volumeAccessoryEnabled": {
        "title": "Enable Volume Devices",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "zone2Enabled": {
        "title": "Enable Zone 2",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "zone3Enabled": {
        "title": "Enable Zone 3",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "zone4Enabled": {
        "title": "Enable Zone 4",
        "type": "boolean",
        "default": false,
        "required": false
      }
    }
  }
}
